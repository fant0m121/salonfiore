// Normalize Styles
@import '../../node_modules/normalize.css/normalize.css'

// Import Modules
@import '../_modules/link/link'

@font-face
    font-family 'PF DinText Pro'
    src url('/fonts/PFDinTextPro-Regular.ttf')
    font-weight 400

@font-face
    font-family 'Five Minutes'
    src url('/fonts/FiveMinutes.otf')

// Box sizing partial styles
// Apply a natural box layout model to all elements
*,
*:before,
*:after
    box-sizing border-box

.ui-page
    position relative
    min-height 100%
    width 100%
    background url(/images/bg-bot.png) no-repeat center bottom, url(/images/bg-top.png) no-repeat center top
    background-color #dddfdd
    background-size 100%

.ui-footer
    background url(/images/footer-bg.png) repeat-x top center
    padding-bottom 20px

    &__menu
        padding 10px 0

    &__copy
        font 16px 'PF DinText Pro'
        color #fff
        text-transform uppercase
        padding-top 20px

    &__licence
        font 13px Arial
        color #fff

        div
            margin-top 15px

    &__address
        font 13px Arial
        color #fff
        padding-top 20px
        span
            color #00bcf4

        &-title
            font-style normal
            font-variant normal
            font-weight normal
            font-stretch normal
            font-size 16px
            line-height normal
            font-family PF DinText Pro
            color rgb(255, 255, 255)
            margin-bottom 15px
            text-transform uppercase

        &-line
            margin-top 15px

.ui-bottom-menu
    margin 0
    padding 0
    display -webkit-flex
    display -ms-flex
    display flex

    &__item
        padding 4px 0
        list-style none
        & + &
            margin-left 40px

    &__link
        font 16px 'PF DinText Pro'
        color #fff
        text-transform uppercase
        &:hover
            color #e10084

        &--active
            color #e10084

.ui-price-list
    position relative

    &__link
        font 16px 'PF DinText Pro'
        color #00bcf4

    &__content
        position absolute
        display none
        bottom 30px
        background #1d2e43
        padding 5px 5px 5px 5px
        border-radius 3px 3px 0px 0px

        a
            color #fff
            font 16px "PF DinText Pro"
            text-decoration none
            text-transform uppercase
            padding 5px 5px 5px 10px

            &:hover
                text-decoration underline
                color #00BCF4

// Styling on warning for users on IE7 or below
.browsehappy
    text-align center
    margin 0
    background #fff8e2
    color #000
    padding 0.5em 0


@import './style'
