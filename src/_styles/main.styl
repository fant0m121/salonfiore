                margin 0 0 10px 20px

.ui-question-block
    background #fff
    margin-bottom 20px

    &__header
        padding 20px

.ui-faq
    padding 10px 0

.ui-question
    display flex
    padding 0 20px
    font 14px/20px Arial
    color #1d2e43

    span + span
        padding-left 20px

.ui-answer
    padding 20px 50px
