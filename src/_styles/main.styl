    flex 1

    &__img
        padding-bottom 56.25%
        background-size cover
        background-repeat no-repeat
        background-position 100% 100%

    &__title
        font 18px 'PF DinText Pro'
        color #1d2e43
        padding 20px
        text-transform uppercase
        text-decoration underline

        a
            color #1d2e43

            &:hover
                color #e10084

    &__date
        font 13px Arial
        color #808080
        padding 0 20px 20px 20px

.ui-sale-detail
    background #fff
    font 14px/22px Arial
    color #666
    margin-bottom 20px

    &__content
        padding 30px

    &__subsection
        background #f3f3f3
        font 20px 'PF DinText Pro'
        color #e10084
        text-transform uppercase
        padding 20px 30px

    &__heading
        font 26px 'PF DinText Pro'
        color #1d2e43
        text-transform uppercase

    &__date
        font 13px Arial
        color #808080

    &__video
        width 100%
        margin 20px 0

    &__img
        padding 10px 0


    p
        padding 10px 0
        margin 0

    &__title
        font 500 20px 'PF DinText Pro'
        text-transform uppercase
        color #000
        padding 15px 0

    &__link
        color #1d2e43
        text-decoration underline

        &:hover
            color #e10084

        &--uppercase
            text-transform uppercase

.ui-product-cart
    background #fff
    margin-bottom 20px
    flex 1

    &__img
        padding-bottom 58.25%
        background-size contain
        background-repeat no-repeat
        background-position 50% 100%

    &__title
        font 17px 'PF DinText Pro'
        text-decoration underline
        text-align center
        padding 20px

        a
            color #1d2e43

            &:hover
                color #e10084

.ui-product
    background #fff
    padding 20px
    margin-bottom 20px

    &__heading
        font 26px 'PF DinText Pro'
        color #1d2e43
        text-transform uppercase

    &__link
        font 17px 'PF DinText Pro'
        text-decoration underline
        text-transform uppercase

        a
            color #1d2e43

            &:hover
                color #e10084

.ui-product-detail
    background #fff
    padding 30px
    margin-bottom 20px
    color #666

    &__heading
        font 26px 'PF DinText Pro'
        color #1d2e43
        text-transform uppercase
        padding-bottom 20px

    p
        color #666
        margin 0
        padding 15px 0

    &__title
        font 500 20px 'PF DinText Pro'
        text-transform uppercase
        color #000
        padding 15px 0

    a
        text-decoration underline
        color #1d2e43

        &:hover
            color #e10084

.ui-product-detail-list
    margin 0
    padding 10px 0

    li
        margin-left 20px

    a
        text-decoration underline
        color #1d2e43

        &:hover
            color #e10084

.ui-about
    margin-bottom 30px

    &__title
        padding-bottom 20px

    p
        margin 15px 0
        padding 0

    a
        text-decoration underline
        color #1d2e43

        &:hover
            color #e10084

.ui-view
    padding 10px 0 20px 0
    text-transform uppercase

    img
        padding 0 5px 0 15px

    a
        text-decoration underline
        color #1d2e43
        border-bottom 1px dotted #1d2e43
        background #fff

        &:hover
            color #e10084
            border-bottom 1px dotted #e3258e

.ui-team-cart
    background-size cover
    background-position top center
    background-repeat no-repeat
    position relative
    padding-bottom 133.333%
    flex 1
    margin-bottom 20px

    &__name
        position absolute
        bottom 55px
        display flex
        justify-content space-between
        width 100%

        a
            font 18px 'PF DinText Pro'
            text-transform uppercase
            text-decoration underline
            color #1d2e43
            padding 5px 15px
            background #fff

            &:hover
                color #e10084

    &__post
        position absolute
        bottom 20px
        text-transform uppercase
        white-space nowrap
        display flex
        justify-content space-between
        align-items center
        width 100%

        span
            font 15px 'PF DinText Pro'
            color #00bcf4
            padding 5px 15px
            background #fff

.ui-team-detail
    background #f3f3f3
    padding 20px 25px
    font 16px 'PF DinText Pro'
    color #1d2e43
    margin-bottom 30px

    &__heading
        text-align center

    &__post
        font 18px 'PF DinText Pro'
        color #00bcf4
        text-transform uppercase
        text-align center
        padding 20px

    p
        line-height 24px
        margin 15px 0
        padding 0

    &__button
        text-align center
        padding 20px

.ui-gallery-cart
    background-size cover
    background-position top center
    background-repeat no-repeat
    position relative
    padding-bottom 100%
    margin-bottom 20px
    flex 1

    &__title
        position absolute
        padding 5px 15px
        background #fff
        bottom 55px

        a
            font 18px 'PF DinText Pro'
            text-transform uppercase
            text-decoration underline
            color #1d2e43

            &:hover
                color #e10084

    &__photo
        font 18px 'PF DinText Pro'
        color #00bcf4
        background #fff
        padding 5px 15px
        text-transform uppercase
        position absolute
        bottom 20px

.ui-articl-cart
    background #fff
    margin-bottom 20px
    flex 1

    &__img
        background-size cover
        background-position top center
        background-repeat no-repeat
        position relative
        padding-bottom 85.25%

    &__title
        padding 10px 20px

        a
            font 18px 'PF DinText Pro'
            text-transform uppercase
            text-decoration underline
            color #1d2e43

            &:hover
                color #e10084

.ui-articles-detail
    background #fff
    margin-bottom 30px
    color #666

    &__content
        padding 20px 30px

    &__subsection
        font 20px 'PF DinText Pro'
        color #e10084
        text-transform uppercase
        background #f3f3f3
        padding 20px 30px

    &__img
        padding 10px 0

    ol
        margin 15px 0
        padding 0
        li
            margin 0 0 10px 20px

    ul
        padding 0
        margin 15px 0
        li
            margin-left 20px

    &__title
        padding 0

    p
        margin 15px 0
        padding 0

.ui-services-detail
    margin-bottom 30px

    &__heading
        background #fff
        padding 30px
        font 40px 'PF DinText Pro'
        color #1d2e43
        text-transform uppercase
        text-align center

    &__content
        background #f3f3f3
        padding 20px 25px
        font 16px 'PF DinText Pro'
        color #1d2e43

        p
            margin 15px 0
