                                .ui-sale-cart__img(style="background-image: url('http://salonfiore.ru/upload/iblock/c8a/c8a528a955ce2ae727762700823c5a90.jpg')")
                                .ui-sale-cart__title
                                    a(href='/sale/detail/') Halloween Party 26-27-28 октября!
                                .ui-sale-cart__date 23 Октября 2017
                        .l-col.l-col--xs-4.l-col--xs-flex
                            .ui-sale-cart
                                .ui-sale-cart__img(style="background-image: url('http://salonfiore.ru/upload/iblock/7f9/7f982c840525c8561c68b3b414b0d125.png')")
                                .ui-sale-cart__title
